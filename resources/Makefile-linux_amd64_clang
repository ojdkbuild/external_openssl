configure:
	@echo -- Creating symlinks for OpenSSL headers
	@mkdir openssl/include/openssl && cd openssl/include/openssl && \
	    $(SH) ${CMAKE_CURRENT_LIST_DIR}/resources/preconfigured/create-symlinks.sh
	
build:
ifeq ($(wildcard ./openssl_flag),)
	rm -rf openssl/include/openssl
# http://wiki.openssl.org/index.php/Compilation_and_Installation#Modifying_Build_Settings	
	perl -i -p -e 's#^"linux-x86_64-clang",\s*"clang: -m64 -DL_ENDIAN -DTERMIO -O3#"linux-x86_64-clang", "clang: -m64 -DL_ENDIAN -DTERMIO ${${PROJECT_NAME}_CFLAGS}#g' ./openssl/Configure
	perl -i -p -e 's#^install: all install_docs install_sw#install: all install_sw#g' ./openssl/Makefile.org
	cd openssl && $(SH) ./Configure \
	    linux-x86_64-clang \
	    ${${PROJECT_NAME}_SHARED} \
	    --openssldir=${CMAKE_CURRENT_BINARY_DIR}/openssl_install
	cd openssl && $(MAKE)
	cd openssl && $(MAKE) install
	mkdir -p ${CMAKE_LIBRARY_OUTPUT_DIRECTORY}
	cp ./openssl/libcrypto.a ${CMAKE_LIBRARY_OUTPUT_DIRECTORY}/libcrypto.a
	cp ./openssl/libssl.a ${CMAKE_LIBRARY_OUTPUT_DIRECTORY}/libssl.a
	touch ./openssl_flag
else
	@echo "[${CMAKE_CURRENT_BINARY_DIR}/openssl_flag] found, skipping build"
endif	
