
export CC := ${CMAKE_C_COMPILER} -arch x86_64
export AR := ${CMAKE_AR}
export AS := ${CMAKE_AS}
export LD := ${CMAKE_LD}
export NM := ${CMAKE_NM}
export OBJCOPY := ${CMAKE_OBJCOPY}
export OBJDUMP := ${CMAKE_OBJDUMP}
export RANLIB := ${CMAKE_RANLIB}
export STRIP := ${CMAKE_STRIP}

all:
ifeq ($(wildcard ${CMAKE_CURRENT_BINARY_DIR}/openssl),)	
	cp -a ${CMAKE_CURRENT_LIST_DIR}/openssl ${CMAKE_CURRENT_BINARY_DIR}/openssl
	cd ${CMAKE_CURRENT_BINARY_DIR}/openssl && $(SH) ./Configure darwin64-x86_64-cc
	cd ${CMAKE_CURRENT_BINARY_DIR}/openssl && $(MAKE)
else
	@echo "[${CMAKE_CURRENT_BINARY_DIR}/openssl] directory found, skipping build"
endif		
